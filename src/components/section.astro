---
const { title } = Astro.props;
---

<section>
  <h2>{title}</h2>
  <slot />
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 900px;
    min-width: 200px;
    margin-inline: auto;
    margin-bottom: 2rem;
    padding-inline: 20px;
  }
</style>
