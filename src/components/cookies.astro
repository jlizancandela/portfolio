<section id="cookies" class="visible">
  <h2>Cookies</h2>
  <p>
    Utilizamos cookies para mejorar la experiencia de usuario. Al continuar,
    aceptas la configuraci√≥n de cookies.
  </p>
  <div>
    <button id="aceptar">Continuar</button>
    <button id="rechazar">Rechazar</button>
  </div>
</section>

<script>
  const rechazar = document.querySelector("#rechazar");
  const aceptar = document.querySelector("#aceptar");
  const seccion = document.querySelector("#cookies");
  if (rechazar && aceptar && seccion) {
    const visible = localStorage.getItem("cookies");
    if (visible) {
      seccion.classList.toggle("visible");
    }
    aceptar.addEventListener("click", () => {
      seccion.classList.toggle("visible");
      localStorage.setItem("cookies", "true");
    });
    rechazar.addEventListener("click", () => {
      seccion.classList.toggle("visible");
      localStorage.setItem("cookies", "false");
    });
  }
</script>

