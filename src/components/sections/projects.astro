---
import Section from "../section.astro";
import { projects } from "../../assets/resume.json";
---

<Section title="Proyectos">
  <div>
    {
      projects.map(({ name, description, url, highlights }) => (
        <article>
          <header>
            <a href={url} target="_blank">
              <h3>{name}</h3>
              <img
                src={`https://api.qrserver.com/v1/create-qr-code/?data=${url}`}
                alt="Qr Code"
              />
            </a>
            <p>{description}</p>
          </header>
          <footer>
            <ul>
              {highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </footer>
        </article>
      ))
    }
  </div>
</Section>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border: 1px solid var(--quaternary-color);
    border-radius: 0.5rem;
    padding: 1rem;
    width: 100%;
    flex: 1;
    height: 100%;
  }

  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 100px;
  }

  ul {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    list-style: none;
    flex-wrap: wrap;
  }

  img {
    height: 3rem;
    width: 3rem;
    display: none;
  }

  li {
    border: 1px solid var(--quaternary-color);
    padding: 0.3rem;
    border-radius: 0.5rem;
    color: var(--tertiary-color);
    font-size: 0.7rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  li:hover {
    background-color: var(--quaternary-color);
    color: var(--tertiary-color);
  }

  a {
    color: var(--tertiary-color);
    text-decoration: none;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    justify-content: space-between;
  }

  a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  h3 {
    font-size: 1rem;
  }

  p {
    font-size: 0.8rem;
  }
  @media print {
    img {
      display: block;
    }
  }
</style>
