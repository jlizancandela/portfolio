---
import Cookies from "../components/cookies.astro";
import Footer from "../components/footer.astro";
import Mode from "../components/mode.astro";
import About from "../components/sections/about.astro";
import Estudios from "../components/sections/estudios.astro";
import Experiencia from "../components/sections/experiencia.astro";
import Hero from "../components/sections/hero.astro";
import Projects from "../components/sections/projects.astro";
import Skills from "../components/sections/skills.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Jorge Liz√°n Candela</title>
  </head>
  <body>
    <Mode />
    <Hero />
    <About />
    <Experiencia />
    <Estudios />
    <Skills />
    <Projects />
    <Footer />
    <Cookies />
  </body>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=PT+Mono&family=VT323&display=swap");

    :root {
      --background-color: #fff;
      --primary-color: #212121;
      --secundary-color: #424242f3;
      --tertiary-color: #616161;
      --quaternary-color: #f5f5f5;
      --quinary-color: #e0e0e0;
    }

    :root.dark {
      --background-color: #212121;
      --primary-color: #f5f5f5;
      --secundary-color: #bdbdbd;
      --tertiary-color: #9e9e9e;
      --quaternary-color: #fafafa;
      --quinary-color: #eeeeee;
    }

    * {
      font-family: "PT Mono", monospace;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    p {
      color: var(--tertiary-color);
    }

    h1,
    h2,
    h3 {
      color: var(--primary-color);
    }
    h4 {
      color: var(--secundary-color);
    }

    body {
      background-color: var(--background-color);
    }
  </style>
</html>
